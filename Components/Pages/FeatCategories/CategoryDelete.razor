@rendermode InteractiveServer

<div>
    <KonnButton Text="Delete Category" Danger="true" OnClick="(() => IsDeleteCategoryVisible = true)"/>

    <KonnModal IsVisible="@IsDeleteCategoryVisible" OnClose="@(() => IsDeleteCategoryVisible = false)" Size="sm">
        <div class="flex flex-col space-y-[16px]">
            <div>
                <div class="text-lg text-pText font-semibold">Delete Category</div>
                <div class="text-sText/40 font-medium">
                    Invite subscribers, contacts and past guests via email or SMS.
                </div>
            </div>

            <div class="flex flex-col gap-y-[8px]">
                <KonnButton ClassName="w-full" Danger Text="Delete Category" />
                <KonnButton Text="Cancel" Variant="secondary" ClassName="w-full" OnClick="@(() => IsDeleteCategoryVisible = false)" />
            </div>
        </div>
    </KonnModal>
</div>

@code {
    [Parameter]
    public int CategoryId { get; set; } = default!;

    public bool IsDeleteCategoryVisible { get; set; } = false;
}
